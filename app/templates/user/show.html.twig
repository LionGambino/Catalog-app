{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.user_details'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.user_details'|trans({'%email%': user.email|default('')}) }}</h1>
    {% if user is defined and user|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.email'|trans }}</dt>
            <dd>{{ user.email }}</dd>
        </dl>
        <p>
            <a class="btn btn-info" href="{{ url('user_edit', {id: user.id}) }}" title="{{ 'action.user_edit'|trans }}">
                {{ 'action.user_edit'|trans }}
            </a>
            <a class="btn btn-warning" href="{{ url('password_edit', {id: user.id}) }}" title="{{ 'action.password_edit'|trans }}">
                {{ 'action.password_edit'|trans }}
            </a>
        </p>
        <p>
            <a class="btn btn-outline-secondary" href="{{ url('element_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}